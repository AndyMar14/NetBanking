@using NetBanking.Core.Application.ViewModels.Transactions
@model SaveTransactionsViewModel
<div class="container-fluid">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">seguro que desea realizar este pago?</h5>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" onclick="enviar()">Realizar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Registro de nuevo usuario</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Pagos" asp-action="PagoTarjetaCredito" id="form">

                        <div class="mb-3">
                            <label asp-for="UserProductId" class="form-label">Cuenta de origen: </label>
                            <input asp-for="UserProductId" class="form-control" />
                            <span asp-validation-for="UserProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto: </label>
                            <input asp-for="Amount" type="number" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RecipientProductId" class="form-label">Tarjeta de destino: </label>
                            <input asp-for="RecipientProductId" class="form-control" />
                            <span asp-validation-for="RecipientProductId" class="text-danger"></span>
                        </div>
                    </form>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Realizar
                    </button>
                    <a asp-controller="Pagos" asp-action="Index" class="btn btn-warning">Volver atras</a>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    function enviar() {
        $('#form').submit();
    }
</script>
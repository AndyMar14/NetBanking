@using Microsoft.AspNetCore.Http
@using NetBanking.Core.Application.Dtos.Account
@using NetBanking.Core.Application.Helpers;
@using NetBanking.Core.Application.ViewModels.Users
@inject IHttpContextAccessor httpContextAccessor
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var isAdmin = User != null ? User.Roles.Any(r => r == "Admin") : false;
    var isClient = User != null ? User.Roles.Any(r => r == "Client") : false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAdd.NetBanking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NetBanking</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User != null)
                        {
                            if (isClient)
                            {
                                <li class="nav-item">
                                    <ul>
                                        <li data-toggle="dropdown" class="nav-link text-dark">
                                            Pagos
                                            <ul class="dropdown-menu">
                                                <li><a class="nav-link text-dark" asp-controller="Pagos" asp-action="PagoExpreso">Expreso</a></li>
                                                <li><a class="nav-link text-dark" asp-controller="Pagos" asp-action="PagoTarjetaCredito">Tarjeta de crédito</a></li>
                                                <li><a class="nav-link text-dark" asp-controller="Pagos" asp-action="PagoPrestamo">Préstamo</a></li>
                                                <li><a class="nav-link text-dark" asp-controller="Pagos" asp-action="PagoBeneficiario">Beneficiarios</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Recipients" asp-action="Index">Beneficiario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Avance de Efectivo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Transferencia</a>
                                </li>
                            }
                            if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="UsersList">Administración de usuario</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="LogOut">Log Out</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebAdd.NetBanking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
